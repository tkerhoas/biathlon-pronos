generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Athlete {
  id        Int       @id @default(autoincrement())
  name      String
  country   String
  gender    String
  events    EventResult[]
}

model Event {
  id        Int           @id @default(autoincrement())
  name      String
  date      DateTime
  results   EventResult[]
}

model EventResult {
  id        Int      @id @default(autoincrement())
  athlete   Athlete  @relation(fields: [athleteId], references: [id])
  athleteId Int
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   Int
  position  Int
  score     Int
}

model UserScore {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  total     Int      @default(0)
}
