datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String?  @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())

  pronostics Pronostic[]
}

model Athlete {
  id        Int      @id @default(autoincrement())
  ibuId     String?  @unique
  name      String
  nation    String?
  sex       String?
  createdAt DateTime @default(now())
}

model Course {
  id        Int      @id @default(autoincrement())
  ibuId     String?  @unique
  name      String
  date      DateTime
  type      String?
  gender    String?
  status    String   @default("upcoming")
  createdAt DateTime @default(now())

  results    Result?
  pronostics Pronostic[]
}

model Pronostic {
  id             Int      @id @default(autoincrement())
  userId         Int
  courseId       Int
  pick1AthleteId Int?
  pick2AthleteId Int?
  pick3AthleteId Int?
  createdAt      DateTime @default(now())
}

model Result {
  id               Int      @id @default(autoincrement())
  courseId         Int      @unique
  result1AthleteId Int?
  result2AthleteId Int?
  result3AthleteId Int?
  createdAt        DateTime @default(now())
}
